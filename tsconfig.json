{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": "./",
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "jsx": "preserve",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "useDefineForClassFields": true,
    // 启用装饰器语法
    "experimentalDecorators": true,
    // 为装饰器提供元数据的支持
    "emitDecoratorMetadata": true,
    "lib": ["ESNext", "dom"]
  },
  "include": [
    "packages/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist"
  ]
}
